<Window x:Class="CollarChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollarChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="colorArea" Background="PaleTurquoise" Margin="20"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition Height="58"/>
                <RowDefinition Height="58"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="16"/>
            <TextBlock Grid.Column="0" Grid.Row="1" Text="G" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="16"/>
            <TextBlock Grid.Column="0" Grid.Row="2" Text="B" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="16"/>
            <Slider x:Name="rSlider" Grid.Column="1" Grid.Row="0" VerticalAlignment="Bottom" Height="30" ValueChanged="rgbSlider_ValueChanged" Maximum="255"/>
            <Slider x:Name="gSlider" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" Height="30" ValueChanged="rgbSlider_ValueChanged" Maximum="255"/>
            <Slider x:Name="bSlider" Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" Height="30" ValueChanged="rgbSlider_ValueChanged" Maximum="255"/>
            <TextBox x:Name="rValue" Grid.Column="2" Grid.Row="0" Text="{Binding ElementName=rSlider, Path=Value, Mode=TwoWay}" VerticalAlignment="Bottom" Margin="5" FontSize="18"/>
            <TextBox x:Name="gValue" Grid.Column="2" Grid.Row="1" Text="{Binding ElementName=gSlider, Path=Value, Mode=TwoWay}" VerticalAlignment="Bottom" Margin="5" FontSize="18"/>
            <TextBox x:Name="bValue" Grid.Column="2" Grid.Row="2" Text="{Binding ElementName=bSlider, Path=Value, Mode=TwoWay}" VerticalAlignment="Bottom" Margin="5" FontSize="18"/>
            <ComboBox Grid.Column="1" Grid.Row="3" VerticalAlignment="Bottom"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button x:Name="stockButton" Content="STOCK" Grid.Row="0" Margin="10,5" FontSize="24"/>
            <ListBox x:Name="stockList" Grid.Row="1" Height="204" Margin="10"/>
        </Grid>
    </Grid>
</Window>
